// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model Session {
  id             String        @id @default(cuid())
  sessionId      String        @unique
  expiresAt      DateTime
  ipAddress      String?
  userAgent      String?
  lastActivityAt DateTime      @default(now())
  messageCount   Int           @default(0)
  createdAt      DateTime      @default(now())
  messages       Message[]
  chatHistories  ChatHistory[]
  
  @@index([sessionId])
  @@map("sessions")
}

// ChatHistory model - Represents chat conversation threads
// Each history entry represents a conversation with a title
// Users can rename and delete history entries
model ChatHistory {
  id        String   @id @default(cuid())
  sessionId String
  title     String   // Auto-generated or user-defined title
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@index([sessionId])
  @@index([createdAt])
  @@map("chat_histories")
}

// Message model - Chat history
// Stores all messages (user and assistant) per session
model Message {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // 'user' or 'assistant'
  content   String
  createdAt DateTime @default(now())
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@index([sessionId])
  @@index([createdAt])
  @@map("messages")
}

// CachedResponse model - Cache for AI responses
// Stores unique question-answer pairs to avoid redundant n8n calls
model CachedResponse {
  id              String   @id @default(cuid())
  questionHash    String   @unique  // SHA256 hash of normalized question
  question        String   // Original question for debugging
  answer          String   // Response from n8n
  hitCount        Int      @default(0)  // Number of times cache was used
  createdAt       DateTime @default(now())
  expiresAt       DateTime  // TTL - when cache expires
  lastAccessedAt  DateTime @default(now())  // Last time cache was accessed
  
  @@index([expiresAt])  // For cleanup of expired cache
  @@index([hitCount])   // For analytics
  @@map("cached_responses")
}


